---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" 
    xmlns:atom="http://www.w3.org/2005/Atom"
    xmlns:media="http://search.yahoo.com/mrss/"
    >
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <image>
        <url>https://media.fullofwishes.co.uk/00-misc/ahfow-web/ahfow-2015-site-image1400x1400.jpg</url>
        <width>1400</width>
        <height>1400</height>
        <title>A Head Full of Wishes</title>
        <link>https://www.fullofwishes.co.uk</link>
    </image>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed-excerpts.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for post in site.posts limit:16 -%}
     {% unless post.draft -%}
      <item>
        <title>{% if post.series-title %}{{ post.series-title | xml_escape }}: {% endif %}{{ post.title | xml_escape }}</title>
        <description>{{ post.excerpt | strip_html | truncatewords: 40 | xml_escape }}
		{% for tag in post.tags -%}{% assign words = tag | split : " " %}{% capture camelcase %}{% for word in words %}{{ word | replace: "&", "And" | capitalize}}{% endfor%}{% endcapture %} #{{ camelcase | xml_escape}}{% endfor %}{% for category in post.categories %}{% assign words = category | split : " " %}{% capture camelcase %}{% for word in words %}{{ word | replace: "&", "And" | capitalize}}{% endfor%}{% endcapture %} #{{ camelcase | xml_escape}}{% endfor %}
        </description>
        <author>{{post.author.display_name}}</author>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ site.domain }}{{ post.url | prepend: site.baseurl }}</link>
        {% if post.enclosure.url contains ".mp3" -%}
        <enclosure url="{{post.enclosure.url}}" length="{{post.enclosure.length}}" type="audio/mpeg" />
        {% elsif post.imageurl contains ".jpg" or post.imageurl contains "googleusercontent" -%}
        <media:content url="{{post.imageurl}}" type="image/jpg" medium="image" />
        {% elsif post.imageurl contains ".png" -%}
        <media:content url="{{post.imageurl}}" type="image/png" medium="image" />
        {% endif %}
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% for tag in post.tags -%}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}{% for cat in post.categories -%}
        <category>{{ cat | xml_escape }}</category>
        {% endfor %}
      </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
